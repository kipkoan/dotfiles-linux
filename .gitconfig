[user]
  name = Kip McEntire
  email = kipm@zillow.com

[core]
  excludesfile = ~/.config/git/ignore
  legacyheaders = false
  pager = less -FMRiX

[repack]
  usedeltabaseoffset = true

[push]
  default = simple

[ssh]
  variant = ssh

[merge]
  tool = vimdiff
  conflictstyle = diff3

[pull]
  rebase = true

[rebase]
  autoStash = true

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[rerere]
  enabled = 1

[pager]
  status = true
  show-branch = true

[color]
  status = auto
  diff = auto
  branch = auto
  ui = auto
  interactive = auto

[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[alias]
  a = add
  aa = add --all
  ai = add -i
  amend = commit --amend
  alias = config --get-regexp '^alias\\.'
  ap = add -p
  b = branch
  ba = branch -a
  c = commit
  ca = commit -a
  cam = commit -am
  cm = commit -m
  co = checkout
  cof = checkout --
  com = "!f() { git merge --no-ff --no-commit $@ && git reset head -q; }; f"  # checkout-merge
  cp = cherry-pick
  d = diff
  dt = difftool
  div = divergence
  dc = diff --cached
  fa = fetch --all --prune
  ff = merge --ff-only
  h = !git hd
  hd = !git l -1

  ls-ignored = !git ls-files -v | grep '^[a-z]'
  ls-igskipped = !git ls-files -v | grep '^[a-zS]'
  ls-skipped = !git ls-files -v | grep '^S'
  ignore = update-index --assume-unchanged
  unignore = update-index --no-assume-unchanged
  skip = update-index --skip-worktree
  unskip = update-index --no-skip-worktree

  in = !git log $(git rev-parse --abbrev-ref --symbolic-full-name @{u}) ^HEAD
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  lg = log --pretty=medium
  lm = !git l --author=$(git config user.email)
  lp = log -p -1
  ls = ls-files
  out = !git log HEAD ^$(git rev-parse --abbrev-ref --symbolic-full-name @{u})
  pl = pull
  plff = pull --ff-only
  pod = !git push --delete $(git remote)
  pom = !git push -u $(git remote) $(git rev-parse --abbrev-ref HEAD)
  ps = push
  plre = pull --rebase
  r = !git --no-pager l -20
  ra = !git r --all
  recent = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format="%(refname:short)"
  rh = reset HEAD
  st = status
  wc = whatchanged -p --abbrev-commit --pretty=medium --
  dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
